<h2>Workers List</h2>

<table>
  <tr>
    <th>First</th>
    <th>Last</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workers.each do |worker| %>
  <tr>
    <td><%= worker.first %> </td>
    <td><%= worker.last %> </td>
    <td><%= worker.email %> </td>
    <td><%= link_to 'Show', worker %> | </td>
    <td><%= link_to 'Edit', edit_worker_path(worker) %> | </td>
		<td><%= button_to "Delete", worker, confirm: "Are you sure you want to delete #{worker.first} #{worker.last}?", :method=>:delete, :class=>:destroy %></td>
  </tr>
<% end %>
</table>

